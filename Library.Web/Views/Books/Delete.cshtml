@model Book
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

@using (Html.BeginForm())
{
    <div class="form-group row">
        <div class="col-sm-6">
            @Html.LabelFor(x => x.Author, new { @class = "form-control" })
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(x => x.Author, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            @Html.LabelFor(x => x.Title, new { @class = "form-control" })
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(x => x.Title, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            @Html.LabelFor(x => x.ProductionYear, "Publish Year", new { @class = "form-control" })
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(x => x.ProductionYear, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            @Html.LabelFor(x => x.GenreId, "Genre", new { @class = "form-control" })
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(x => x.Genre.Name, new { @class = "form-control" })
        </div>
    </div>
    <input type="submit" value="Delete" class="btn btn-danger" />
    <div class="btn">@Html.ActionLink("Back", "Index", "Books", null, new { @class = "btn btn-primary" })</div>

}